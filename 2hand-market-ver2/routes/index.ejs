<% include ./../../element/header-1 %>

<div class="justify-content-center">
    <!-- container -->

    <div class="row justify-content-center">

        <!-- nav-bar-right -->
        <% include ./../../element/nav-bar-right %>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <!-- col-lg-9 -->
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="./img/h1.png" alt="First slide">
                    </div>
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="./img/h2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="./img/h3.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">

                <% items.forEach((item)=>{ %>
                <div class="col-lg-4 col-md-6 mb-4 product-card">
                    <div class="card h-100">
                        <a href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %>"><img class="card-img-top img-size" src="<%= item.link_img[0] %>" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %> "><%= item.name %></a>
                            </h4>
                            <h5><%= item.price %>đ</h5>
                            <!-- <p class="card-text"><%= item.desc %></p> -->
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">★ ★ ★ ★ ☆</small>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->
    <div class="m-3">
        
        <% include ./../../helper/pagination%>
    
        <%- paginationHelper(pagination, currentStatus, keyWord, from, to) %>
     
      </div>
</div>