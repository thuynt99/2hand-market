<!-- header -->
<% include ./../../element/header-2 %>

<!-- content -->
<div class="container">
  <div class="row">
    <div class="col-md-6 row m-3 p-3" style="z-index: 999;">
      <!-- hiển thị ảnh sản phẩm -->
      <div class="mr-2" style="width: 15%;">
        <% for(let i=0; i<item.link_img.length; i++) { %>
          <img src="<%= item.link_img[i]%>" class="imgProductSmall">
        <%}%>
      </div>

      <div class="show" href="<%= item.link_img[0]%>" style="position: relative; width: 75%;">
        <img src="<%= item.link_img[0]%>" id="show-img" class="imgProduct">
        <div
            style="position: absolute; left: 5.5px; top: 300px; background-color: rgb(0, 0, 0); width: 100px; height: 100px; opacity: 0.2; border: 1px solid rgb(204, 204, 204); cursor: crosshair; display: none;">
        </div>
      </div>
    
      
    </div>

      <div class="col-md-5 m-3 p-3">
        <div class="box mb-2">
          <div class="box-title">
            <h5>Thông tin sản phẩm</h5>
          </div>

          <div class="box-body">
            <p><b>Tên sản phẩm: </b><span><i id="name"><%= item.name%></i></span></p>
            <p><b>Giá sản phẩm: </b><span id="price"><%= item.price%></span>đ</p>
            <p><b>Mô tả: </b><span><i><%= item.desc%></i></span></p>
          </div>
        </div>

        <div class="box">
          <div class="box-title">
            <h5>Chọn màu sắc kích cỡ</h5>
          </div>

          <div class="box-body">
            <form class="form-group">
              <div>
                <div class="m-2 p-2"><span>Số lượng: </span><input type="number" name="amount" min="1" max="<%= item.status %>" id="amount" value="1"></div>
                <div class="m-2 p-2">
                  <span>size: </span>
                  <select class="ml-4" name="size" id="size">
                    <option value="S" >S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                  </select>
                </div>
                <div class="m-2 p-2">
                  <span>Màu sắc: </span>
                  <select name="color">
                    <option value="red">red</option>
                    <option value="blue">blue</option>
                    <option value="green">green</option>
                  </select>
                </div>
                <div>
                  <input type="text" value="<%=item.id%>" hidden id="id">
                </div>

                <div class="row m-2 p-2">
                  <button type="button" class="btn btn-danger mr-2" id="add-to-cart" onclick="addToCart()">Thêm vào giỏ hàng</button>
                  <!-- onclick="addToCart()" -->
                  <a href="/danh-muc-san-pham"><input type="button" class="btn btn-info" value="xem sản phẩm khác"></a>
                </div>
                 
              </div>
            </form>
            
          </div>
        </div>
      </div>
    </div>

